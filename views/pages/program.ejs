<% include ../partials/header %>
<div class='container-fluid'>
        <% items2.forEach(function(item2, index) { %>
        <h1>
                Department of <%=  item2.dept_name %>      
        </h1><br>
        <% }); %>
        <div class='row'>
            <div class="col-lg-4">
                    <div class='card'>
                            <h2 class="card-title">Add Program</h2>
                                  <form action="http://localhost:3000/program" method="POST" class="form-size">
                                      <div class='card-body'>
                                    <table class='uk-table'>

                                    <div class='form-group'>
                                        <tr>
                                           <% items2.forEach(function(item2, school) { %>      
                                            <td><input type="hidden" class='form-control' name="id"
                                                value="<%=  item2.deptID %>"
                                                id="id" required></td>
                                         <% }); %>
                                         </tr>
                                    </div>
                                        
                                    <div class='form-group'>
                                        <tr>
                                            <td align='center'><label for='address'>Name: </label></td>   
                                            <td><input type="text" class='form-control' name="name" id="name" required></td>
                                        </tr>
                                    </div>

                                    <div class='form-group'>
                                            <tr>
                                                <td align='center'><label for='address'>Degree: </label></td>   
                                                <td>
                                                        <select class="form-control" id="deg" name="deg" required>
                                                                <option>Bachelor</option>
                                                                <option>Master</option>
                                                                <option>Doctor</option>
                                                       </select>
                                                </td>
                                            </tr>
                                        </div>

                                        <div class='form-group'>
                                                <tr>
                                                    <td align='center'><label for='address'>Subject: </label></td>   
                                                    <td>
                                                            <select class="form-control" id="subj" name="subj" required>
                                                                    <option>Science</option>
                                                                    <option>Technology</option>
                                                                    <option>Engineering</option>
                                                                    <option>Agriculture and Fisheries</option>
                                                                    <option>Mathematics</option>
                                                            </select>
                                                    </td>
                                                </tr>
                                            </div>
                                    
        
                  
                                    </table>
                                    <br>
                                    <button  class='btn btn-primary btn-lg pull-right' id='submit' name='submit' type='submit'>+ Add Program</button>
                                    </form>
                              </div>
                            </div>
            </div>
            <div class="col-lg-8">
                    <div class="card">
                            <h2 class="card-title">ALL PROGRAMS</h2>
                            <div class='card-body'>
                                          <div class="list-group">
                                                <% items.forEach(function(item, index) { %>
                                                    <a href="/course?id=<%=item.programID %>" class="list-group-item list-group-item-action flex-column align-items-start">
                                                      <div class="d-flex w-100 justify-content-between">
                                                        <h5 class="mb-1"><%=  item.name %> </h5>
                                                      </div>
                                                    </a>
                                                 <% }); %>
                                         </div>
                                
                            </div>
                         </div> 
            </div>
        </div>
        
     </div>

    



<div class='card' id='subjects'>
    <ul class='list-inline'>
          <li class="list-inline-item">Science</li>
          <li class="list-inline-item">Technology</li>
          <li class="list-inline-item">Engineering</li>
          <li class="list-inline-item">Agriculture</li>
          <li class="list-inline-item">Fisheries</li>
          <li class="list-inline-item">Mathematics</li>
    </ul>
</div>
<% include ../partials/footer %>